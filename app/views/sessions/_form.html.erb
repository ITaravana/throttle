<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>
<br>
  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
<br>
  <div class="other-links">
    <%= form.submit %>
    <div class="button"><%= link_to t(".forgot_password"), new_password_path %></div>
  </div>
<br>
<br>
  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      Not yet a member? Please <div class="button"><%= link_to t(".sign_up"), sign_up_path %></div>
    <% end %>
  </div>
<% end %>
